{% trans_default_domain 'FOSUserBundle' %}

<div class="container" class="vertical-center">
    <form class="form-horizontal" role="form" method="POST" action="{{ path("fos_user_security_check") }}">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 style="color:coral">Please Login</h2>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-group has-danger">
                    <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fas fa-user"></i></div>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <!-- <div class="form-control-feedback">
                    <span class="text-danger align-middle">
                        <i class="fa fa-close"></i> Example error message
                    </span>
                </div> -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fas fa-key"></i></div>
                        <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                    <span class="text-danger align-middle">
                    <!-- Put password error message here -->    
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="padding-top: .35rem">
                <div class="form-check mb-2 mr-sm-2 mb-sm-0">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <span style="padding-bottom: .15rem">{{ 'security.login.remember_me'|trans }}</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row" style="padding-top: 1rem">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"><i class="fas fa-sign-in"></i> {{ 'security.login.submit'|trans }}</button>
                    <!-- <a class="btn btn-link" href="/password/reset">Forgot Your Password?</a> -->
                </div>
            </div>
        <div class="row" style="padding-top: 1rem">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                {% if error %}
                    <small class="text-info form-text">{{ error.messageKey|trans(error.messageData, 'security') }}</small><br/>
                {% endif %}
            </div>
        </div>
    </form>
</div>

